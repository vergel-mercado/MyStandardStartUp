<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/error_occurred_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AN ERROR OCCURRED"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/theapplication_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The application will force close."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thecomments_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments(optional):"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/errormessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            android:ems="10"
            android:gravity="top"
            android:hint="Write here..."
            android:padding="3dp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/errorbuttonsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_sendbutton"
            android:onClick="SubmitButton"
            android:text="OK"
            android:textStyle="bold"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>